{

  "description": "Adds a button to send current URL to youtube-dl",
  "manifest_version": 2,
  "name": "YouTube DL Button",
  "version": "1.0",
  "icons": {
    "48": "icons/if_YouTube_571117.png"
  },

  "applications": {
    "gecko": {
      "id": "youtubedlbuttong@mattisawesome.com",
      "strict_min_version": "50.0"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icons/if_YouTube_571117.png"
  },
  
  "permissions": ["nativeMessaging","tabs"]

}
